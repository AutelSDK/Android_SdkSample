<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RCActivity">

    <RadioGroup
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/async"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异步" />

        <RadioButton
            android:id="@+id/synch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步" />
    </RadioGroup>

    <TextView
        android:id="@+id/gb_log_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setGimbalWheelAdjustSpeed"
                android:padding="@dimen/text_padding"
                android:text="setGimbalWheelAdjustSpeed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getGimbalWheelAdjustSpeed"
                android:padding="@dimen/text_padding"
                android:text="getGimbalWheelAdjustSpeed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setGimbalAngleSpeed"
                android:padding="@dimen/text_padding"
                android:text="setGimbalAngleSpeed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setGimbalAngle"
                android:padding="@dimen/text_padding"
                android:text="setGimbalAngle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="setGimbalWorkMode" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setGimbalWorkModeFREE"
                    android:padding="@dimen/text_padding"
                    android:text="FREE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setGimbalWorkModeFPV"
                    android:padding="@dimen/text_padding"
                    android:text="FPV" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getGimbalWorkMode"
                android:padding="@dimen/text_padding"
                android:text="getGimbalWorkMode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="setRollAdjustData" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setRollAdjustDataPLUS"
                    android:padding="@dimen/text_padding"
                    android:text="PLUS" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setRollAdjustDataMINUS"
                    android:padding="@dimen/text_padding"
                    android:text="MINUS" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setRollAdjustDataRESET"
                    android:padding="@dimen/text_padding"
                    android:text="RESET" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setRollAdjustDataQUERY"
                    android:padding="@dimen/text_padding"
                    android:text="QUERY" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="setGimbalAngleListener" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setGimbalAngleListener"
                    android:padding="@dimen/text_padding"
                    android:text="set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="resetGimbalAngleListener"
                    android:padding="@dimen/text_padding"
                    android:text="reset" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="setGimbalStateListener" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="setGimbalStateListener"
                    android:padding="@dimen/text_padding"
                    android:text="set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:onClick="resetGimbalStateListener"
                    android:padding="@dimen/text_padding"
                    android:text="reset" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRollAdjust"
                android:padding="@dimen/text_padding"
                android:text="getRollAdjust"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRoll"
                android:padding="@dimen/text_padding"
                android:text="getRoll"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getPitch"
                android:padding="@dimen/text_padding"
                android:text="getPitch"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getYaw"
                android:padding="@dimen/text_padding"
                android:text="getYaw"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
