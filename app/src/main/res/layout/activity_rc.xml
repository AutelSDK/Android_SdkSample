<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RCActivity">
    <TextView
        android:id="@+id/log_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/log_text_min_height"
        android:layout_margin="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setRCLanguage"
                android:padding="@dimen/text_padding"
                android:text="setRCLanguage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRCLanguage"
                android:padding="@dimen/text_padding"
                android:text="getRCLanguage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="enterBinding"
                android:padding="@dimen/text_padding"
                android:text="enterBinding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="exitBinding"
                android:padding="@dimen/text_padding"
                android:text="exitBinding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRCBindMode"
                android:padding="@dimen/text_padding"
                android:text="getRCBindMode"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setRFPower"
                android:padding="@dimen/text_padding"
                android:text="setRFPower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRFPower"
                android:padding="@dimen/text_padding"
                android:text="getRFPower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setTeacherStudentMode"
                android:padding="@dimen/text_padding"
                android:text="setTeacherStudentMode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getTeacherStudentMode"
                android:padding="@dimen/text_padding"
                android:text="getTeacherStudentMode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:padding="@dimen/text_padding"
                    android:text="setRCCalibrationStep" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="startCalibration"
                        android:text="开始校准" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="saveCalibration"
                        android:text="保存校准" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="exitCalibration"
                        android:text="退出校准" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setRCLengthUnit"
                android:padding="@dimen/text_padding"
                android:text="setRCLengthUnit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="getRCLengthUnit"
                android:padding="@dimen/text_padding"
                android:text="getRCLengthUnit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="setRCCommandStickMode"
                android:padding="@dimen/text_padding"
                android:text="setRCCommandStickMode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="resetWifi"
                android:padding="@dimen/text_padding"
                android:text="resetWifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:onClick="uploadPhoneCompassAngle"
                android:padding="@dimen/text_padding"
                android:text="uploadPhoneCompassAngle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:padding="@dimen/text_padding"
                        android:text="setRemoteButtonControllerMonitor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="setRemoteButtonControllerMonitor"
                        android:text="set" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="resetRemoteButtonControllerMonitor"
                        android:text="reset" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:padding="@dimen/text_padding"
                        android:text="setRCUploadDataMonitor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="setRCUploadDataMonitor"
                        android:text="set" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="resetRCUploadDataMonitor"
                        android:text="reset" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:padding="@dimen/text_padding"
                        android:text="setRCInfoDataMonitor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="setRCInfoDataMonitor"
                        android:text="set" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:onClick="resetRCInfoDataMonitor"
                        android:text="reset" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginBottom="10px"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="setRemoteControllerConnectStateListener" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:onClick="setRemoteControllerConnectStateListener"
                    android:text="set" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:onClick="resetRemoteControllerConnectStateListener"
                    android:text="reset" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
